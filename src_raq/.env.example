# =============================================================================
# GCP Assistant - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google AI (for Gemini embeddings)
GOOGLE_API_KEY=your_google_api_key_here

# Deepgram (STT)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Cartesia (TTS)
CARTESIA_API_KEY=your_cartesia_api_key_here

# Daily.co (Video/Audio transport)
DAILY_API_KEY=your_daily_api_key_here
DAILY_SAMPLE_ROOM_URL=  # Optional: static room URL

# Weights & Biases (Weave observability)
WANDB_API_KEY=your_wandb_api_key_here

# Brain API URL (for Pipecat bot -> API communication)
BRAIN_API_URL=http://localhost:8000
